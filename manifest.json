{
		"manifest_version": 3,
		"name": "YouTube Shorts Hider",
		"version": "1.0",
		"description": "Hides YouTube Shorts on the Start Page",
		"permissions": ["storage", "scripting"],
		"action": {
				"default_popup": "popup.html",
				"default_icon": "icon.png"
		},
		"content_scripts": [
    {
				"matches": ["*://www.youtube.com/*"],
				"js": ["content.js"],
				"run_at": "document_idle"
    }
		]
}
